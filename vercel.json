{
    "version": 2,
    "builds": [
      {
        "src": "build/**",
        "use": "@vercel/static"
      },
      {
        "src": "backend/index.js",  
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/build/$1"
      },
      {
        "src": "/backend/(.*)",          
        "dest": "/backend/index.js"
      }
    ]
  }
  